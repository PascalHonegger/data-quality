{
  "extends": [ "eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended" ],
  "plugins": [ "react", "jest" ],
  "rules": {
    "react/prop-types": "off",
    "quotes": ["error", "single"],
    "prefer-const": "error",
    "object-curly-spacing": ["error", "always"]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
     "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "settings": {
    "react": {
      "version": "16.5"
    }
  }
}